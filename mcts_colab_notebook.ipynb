## Cell 3 - Game Functions
class TicTacToe:
    def __init__(self):
        self.board = [0] * 9  # 0: empty, 1: X, 2: O
        self.current_player = 1

    def reset(self):
        self.board = [0] * 9
        self.current_player = 1

    def make_move(self, position):
        if self.board[position] == 0:
            self.board[position] = self.current_player
            self.current_player = 2 if self.current_player == 1 else 1

    def check_winner(self):
        winning_conditions = [(0, 1, 2), (3, 4, 5), (6, 7, 8),
                              (0, 3, 6), (1, 4, 7), (2, 5, 8),
                              (0, 4, 8), (2, 4, 6)]
        for condition in winning_conditions:
            if self.board[condition[0]] == self.board[condition[1]] == self.board[condition[2]] != 0:
                return self.board[condition[0]]
        return 0

    def empty_positions(self):
        return [i for i, x in enumerate(self.board) if x == 0]

## Cell 4 - Demo Game
# Example of a demo game
game = TicTacToe()
while True:
    position = random.choice(game.empty_positions())
    game.make_move(position)
    winner = game.check_winner()
    if winner:
        print(f"Player {winner} wins!")
        break
    elif not game.empty_positions():
        print("It's a tie!")
        break

